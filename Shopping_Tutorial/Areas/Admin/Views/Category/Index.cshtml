@model IEnumerable<CategoryModel>
@{
    ViewData["title"] = "Category Listed";
}
<h3>List Categories</h3>

<a asp-action="Create" asp-controller="Category">Add Category</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Category Name</th>
            <th scope="col">Category Description</th>
            <th scope="col">Category slug</th>
            <th scope="col">Category Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">1</th>
                <td>@item.Name</td>
                <td>@Html.Raw(item.Description)</td>

                <td>@item.slug</td>
                <td>
                    @if(item.Status == 1)
                    {
                        <span class="text text-success">Hiển thị</span>
                    }
                    else
                    {
                        <span class="text text-danger">Ẩn</span>

                    }
                </td>

                <td>
                    <a asp-action="Edit" class="btn btn-warning btn-sm" asp-asp-controller="Category" asp-route-Id="@item.Id">Edit</a>
                    <a asp-action="Delete" class="btn btn-danger btn-sm confirmDeletion" asp-asp-controller="Category" asp-route-Id="@item.Id">Delete</a>
                </td>
            </tr>
        }

    </tbody>
</table>